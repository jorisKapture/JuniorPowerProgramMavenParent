<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="Survey" table="SURVEYS">
      <meta attribute="class-description">
         This class contains the survey detail. 
      </meta>
      <id name="id" type="int" column="id">
         <generator class="native"/>
      </id>
      <property name="date" column="date" type="timestamp" not-null="true"/>
      <many-to-one name="person" class="Person" fetch="select" >
            <column name="person_id" not-null="true" />
      </many-to-one>      
      <set name="surveyDetails" cascade="all">
         <key column="survey_id"/>
         <one-to-many class="SurveyDetail"/>
      </set>
   </class>
</hibernate-mapping>